<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="anurag.com.navdrawer.Fragment.AddStyleFragment">

    <!-- TODO: Update blank fragment layout -->



    <ScrollView

        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="200">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:layout_column="0"
                    android:layout_weight="30"
                    android:layout_gravity="center"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/date"
                    android:layout_weight="70"
                    android:layout_gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="100"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Brand"
                    android:layout_weight="30"
                    android:layout_gravity="center"
                    android:textStyle="bold" />

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/brand"
                    android:spinnerMode="dropdown"
                    android:layout_weight="70"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Season"
                    android:layout_weight="30"
                    android:layout_gravity="center"
                    android:textStyle="bold" />

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/season"
                    android:spinnerMode="dialog"
                    android:layout_weight="70"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Style Number"
                    android:layout_weight="30"
                    android:layout_gravity="center"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/style"
                    android:layout_weight="70"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Original Sample Size"
                    android:layout_weight="30"
                    android:layout_gravity="center"
                    android:textStyle="bold" />

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/size"
                    android:spinnerMode="dropdown"
                    android:layout_weight="70"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Designer"
                    android:layout_weight="30"
                    android:layout_gravity="center"
                    android:textStyle="bold" />

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/designer"
                    android:spinnerMode="dropdown"
                    android:layout_weight="70"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Pattern Number"
                    android:layout_weight="30"
                    android:layout_gravity="center"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/pattern"
                    android:layout_weight="70"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Image"
                    android:layout_weight="30"
                    android:layout_gravity="center"
                    android:textStyle="bold" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Add Image"
                    android:id="@+id/image"
                    android:textAlignment="center"
                    android:layout_weight="70"
                    android:layout_gravity="center" />

            </LinearLayout>



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:weightSum="100">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imagevw"
                    android:layout_weight="20" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imagevw1"
                    android:layout_weight="20" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imagevw2"
                    android:layout_weight="20" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imagevw3"
                    android:layout_weight="20" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="delete"
                    android:id="@+id/delete"
                    android:layout_weight="20"
                    android:layout_gravity="center"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Fabric"
                    android:layout_weight="30"
                    android:layout_gravity="center"
                    android:textStyle="bold" />

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/fb_code"
                    android:layout_weight="23.333"
                    android:layout_gravity="center" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/fb_width"
                    android:layout_weight="23.333"
                    android:hint="width"
                    android:textSize="12dp"
                    android:layout_gravity="center"
                    android:inputType="number" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/fb_cons"
                    android:layout_weight="23.333"
                    android:hint="consumption"
                    android:textSize="12dp"
                    android:layout_gravity="center"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:weightSum="100">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Add"
                    android:id="@+id/fb_add"
                    android:layout_weight="30" />

                <ListView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/fabric"
                    android:layout_gravity="top|center"
                    android:layout_weight="70" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Lining"
                    android:layout_weight="30"
                    android:layout_gravity="center"
                    android:textStyle="bold" />

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/ln_code"
                    android:layout_weight="23.333"
                    android:spinnerMode="dropdown"
                    android:layout_gravity="center" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/ln_width"
                    android:layout_weight="23.333"
                    android:hint="width"
                    android:textSize="12dp"
                    android:layout_gravity="center"
                    android:inputType="number" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/ln_cons"
                    android:layout_weight="23.333"
                    android:hint="consumption"
                    android:textSize="12dp"
                    android:layout_gravity="center"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:weightSum="100">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Add"
                    android:id="@+id/ln_add"
                    android:layout_weight="30" />

                <ListView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/lining"
                    android:layout_weight="70"
                    android:layout_gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Comments"
                    android:layout_weight="30"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/comment"
                    android:hint="Original Sample Comment:-"
                    android:layout_weight="70" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:id="@+id/submit" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:id="@+id/cancel" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
